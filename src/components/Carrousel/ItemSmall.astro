---
import { Image } from 'astro:assets';


interface Props {
    id: string;
    href: string;
    name: string;
}

const { id, name, href } = Astro.props;

---

<div id={id} class="xs:w-28 xs:h-28 sm:w-32 sm:h-32 md:w-40 md:h-32 rounded-2xl overflow-hidden border-4 border-cyan-100">
    <Image loading="lazy" class='w-full h-full object-cover ' src={href} alt={name} width="160" height="128" />
</div>