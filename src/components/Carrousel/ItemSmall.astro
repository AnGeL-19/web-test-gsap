---
import { Image } from 'astro:assets';


interface Props {
    id: string;
    href: string;
    name: string;
}

const { id, name, href } = Astro.props;

---

<div id={id}  class="w-40 h-32 rounded-2xl overflow-hidden border-4 border-cyan-100">
    <Image loading="lazy" class='w-full h-full object-cover ' src={href} alt={name} width="160" height="128" />
</div>