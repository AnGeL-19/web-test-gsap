---
import { Image } from 'astro:assets';


interface Props {
	name: string;
	speciality: string;
	href: string;
}

const { href, name, speciality } = Astro.props;

---

<div class="min-w-[362.5px] h-full flex flex-col">
                    
    <div class="w-full h-[504px] rounded-2xl overflow-hidden">
        <Image loading="lazy" class='w-full h-full object-cover' src={href} alt={name} width="362.5" height="504" />
    </div>
    <div class="flex flex-col gap-1 mt-1">
        <span class="text-2xl font-bold text-dark-text">{name}</span>
        <span class="text-base">{speciality}</span>
    </div>
</div>